@model  HMS.Models.HMSUser
@{
    ViewBag.Title = "Login";
    ViewBag.UserName = ViewData.Model.Dictionary["%UserName_Lbl"];
    ViewBag.Password = ViewData.Model.Dictionary["%Password_Lbl"];
    ViewBag.Submit = ViewData.Model.Dictionary["%Login_Btn"];

    ViewBag.UserNamePlaceHolder = ViewData.Model.Dictionary["%UserName_PlHold"];
    ViewBag.PasswordPlaceHolder = ViewData.Model.Dictionary["%Password_PlHold"];
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{

<form class="form-horizontal" role="form">
  <div class="form-group">
    <label  class="col-sm-2 control-label"for="exampleInputUserName1">@ViewBag.UserName</label>
    <div class="col-sm-10">
      <input name="UserName" type="username" class="form-control" placeholder="@ViewBag.UserNamePlaceHolder">
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">@ViewBag.Password</label>
    <div class="col-sm-10">
      <input name="Password" type="password" class="form-control" id="inputPassword3"  placeholder="@ViewBag.PasswordPlaceHolder">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">@ViewBag.Submit</button>
    </div>
  </div>
</form>
}
